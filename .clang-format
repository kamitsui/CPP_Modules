Language: Cpp
BasedOnStyle: LLVM #Or Google, or whatever style you want to base it off of.
Standard: Cpp03 # C++98/03
IndentWidth: 4
UseTab: Never
ColumnLimit: 120
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeElse: false
  BeforeCatch: false
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: false
